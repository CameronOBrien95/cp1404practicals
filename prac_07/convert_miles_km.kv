BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            size_hint_x: None
            width: 420
            id: input_number
            text: ''
            font_size: 24
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'up'
                on_press: app.handle_increment(int(input_number.text), +1)
            Button:
                text: 'down'
                on_press: app.handle_increment(int(input_number.text), -1)
    Button:
        text: 'Convert miles to km'
        # the following line specifies the function in the app class to call when the button is pressed
        on_press: app.handle_calculate(int(input_number.text))
    Label:
        id: output_label
        font_size: 48
        color: (1, 0, 1, 1)