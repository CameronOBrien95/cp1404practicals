BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            size_hint_x: None
            width: 420
            id: input_number
            on_text: app.handle_calculate(input_number.text)
            font_size: 24
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'up'
                on_press: app.handle_increment(input_number.text, +1)
            Button:
                text: 'down'
                on_press: app.handle_increment(input_number.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        font_size: 48
        color: (1, 0, 1, 1)